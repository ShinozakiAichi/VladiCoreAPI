# API runtime configuration
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:8080
API_HTTP_PORT=8080
DOTNET_SYSTEM_GLOBALIZATION_INVARIANT=0

# Database connection string pointing to an existing MySQL container.
# Update the host, credentials, and database name to match your neighbour container.
ConnectionStrings__Default=Server=vladicore-mysql;Port=3306;Database=vladicore;User Id=vladicore;Password=devpass;TreatTinyAsBoolean=true;CharSet=utf8mb4;

# JWT configuration â€” replace with secure values for production.
Jwt__Issuer=VladiCore
Jwt__Audience=VladiCore
Jwt__SigningKey=replace-with-secure-key

# Object storage (S3/MinIO)
S3__Endpoint=http://minio:9000
S3__Bucket=vladicore
S3__AccessKey=minioadmin
S3__SecretKey=minioadmin
S3__UseSsl=false
S3__CdnBaseUrl=

# Reviews module
Reviews__RequireAuthentication=false

# Logging
Serilog__MinimumLevel__Default=Information
Serilog__MinimumLevel__Override__Microsoft=Warning
Serilog__MinimumLevel__Override__System=Warning

# Database auto-provisioning
Database__AutoProvision__Enabled=true
Database__AutoProvision__ApplySeeds=false
Database__AutoProvision__TimeoutSeconds=120
Database__AutoProvision__MigrationsPath=db/migrations/mysql
Database__AutoProvision__SeedsPath=db/seed
Database__AutoProvision__CreateDbIfMissing=true
Database__AutoProvision__DatabaseName=vladicore

# Docker networking
# Name of the shared user-defined network that contains the database container.
DOCKER_NETWORK_NAME=vladicore-backend
# Set to 'true' if the network is created outside of this compose file and should not be managed by Docker Compose.
DOCKER_NETWORK_EXTERNAL=true
